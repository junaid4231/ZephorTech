{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": "Insights, announcements, and articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "heroKicker": {
      "type": "string"
    },
    "heroDescription": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "contentSections": {
      "type": "component",
      "repeatable": true,
      "component": "blog.content-section",
      "required": false
    },
    "pullQuote": {
      "type": "component",
      "component": "blog.quote-block"
    },
    "impactStats": {
      "type": "component",
      "repeatable": true,
      "component": "blog.impact-stat"
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "readingTime": {
      "type": "integer",
      "default": 6
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "heroVideoUrl": {
      "type": "string"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaLink": {
      "type": "string"
    },
    "keyTakeaways": {
      "type": "json"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "posts",
      "required": true
    },
    "relatedPosts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post"
    }
  }
}


