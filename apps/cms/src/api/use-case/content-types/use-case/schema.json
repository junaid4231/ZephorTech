{
  "kind": "collectionType",
  "collectionName": "use_cases",
  "info": {
    "singularName": "use-case",
    "pluralName": "use-cases",
    "displayName": "Use Case",
    "description": "Use cases and industry applications that can be associated with services"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "industry": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "examples": {
      "type": "json",
      "required": false
    },
    "icon": {
      "type": "string",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "services": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}

